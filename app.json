{
  "expo": {
    "name": "Friboi",
    "slug": "Friboi",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "friboi",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
        "infoPlist": {
            "NSLocationWhenInUseUsageDescription": "Seu aplicativo precisa acessar sua localização para mostrá-la no mapa.",
            "NSPhotoLibraryUsageDescription": "Precisamos de acesso à sua galeria para que você possa escolher uma foto.",
            "NSCameraUsageDescription": "Precisamos de acesso à sua câmera para que você possa tirar uma foto."
        },
      "supportsTablet": true
    },
    "android": {
        "permissions": [
            "android.permission.SCHEDULE_EXACT_ALARM",
            "android.permission.ACCESS_FINE_LOCATION",
            "android.permission.ACCESS_COARSE_LOCATION",
            "android.permission.ACCESS_BACKGROUND_LOCATION",
            "CAMERA",
            "READ_EXTERNAL_STORAGE", 
            "WRITE_EXTERNAL_STORAGE", 
            "android.permission.RECORD_AUDIO"
        ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-image-picker",
        {
          "photosPermission": "O aplicativo precisa de acesso à sua galeria para que você possa escolher uma foto para o seu perfil.",
          "cameraPermission": "O aplicativo precisa de acesso à sua câmera para que você possa tirar uma foto para o seu perfil."
        }
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
